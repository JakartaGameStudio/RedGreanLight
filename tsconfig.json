{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react-jsx",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "typeRoots": ["node_modules/@types", "typings/**/*.d.ts"]
  },
  "exclude": [
    "node_modules/**/*"
  ]
}
